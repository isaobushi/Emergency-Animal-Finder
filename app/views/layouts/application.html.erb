<!DOCTYPE html>
<html>
  <head>
    <title>EmergencyAnimalFinder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Open+Sans|Raleway', media: 'all' %>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.4/dist/leaflet.css" />
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>
  <nav>
    <%= link_to 'Incidents', incidents_path %>
    <%= link_to 'Lost an Animal?', new_lost_animal_path %>
    <%= link_to 'Found an Animal?', new_found_animal_path %>
    <%= link_to 'Register', new_user_path %>
    <%= link_to 'Sign In', login_path %>
  </nav>

  <body>
    <script src="https://unpkg.com/leaflet@1.3.4/dist/leaflet.js"></script>
  
    <% @current_user = User.find_by(id: session[:user_id])%>
    <%if @current_user%>

      <p>logged in as <%= @current_user.name %></p>

      <%= link_to "Log out", session_path, method: "delete" %>

    <% end %>

    <%= yield %>
  </body>
  <%= javascript_include_tag 'application' %>
</html>
