<!DOCTYPE html>
<html>
  <head>
    <title>EmergencyAnimalFinder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Open+Sans|Raleway', media: 'all' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>
  <nav>
    <%= link_to 'Incidents', incidents_path %>
    <%= link_to 'Lost an Animal?', new_lost_animal_path %>
    <%= link_to 'Found an Animal?', new_found_animal_path %>
    <%= link_to 'Register', new_user_path %>
    <%= link_to 'Sign In', login_path %>
  </nav>

  <body>
  
    <% @current_user = User.find_by(id: session[:user_id])%>
    <%if @current_user%>

      <p>logged in as <a href='/profiles/<%=@current_user.id%>'><%= @current_user.name %></p></a>

      <%= link_to "Log out", session_path, method: "delete" %>

    <% end %>


    <%= yield %>
  </body>
  <%= javascript_include_tag 'application' %>
</html>
